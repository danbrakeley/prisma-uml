generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("POSTGRES_URL")
}

model User {
  id        String   @id @default(cuid())
  firstName String?
  lastName  String?
  dogs      Dog[]
  profile   Profile?
}

model Profile {
  id     String @id @default(cuid())
  email  String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Dog {
  id     String  @id @default(cuid())
  breed  Breed
  userId String?
  user   User?   @relation(fields: [userId], references: [id])
}

enum Breed {
  Bulldog
  Poodle
}

enum Role {
  Admin
  User
}
